<div class="effect-info {{#unless hasText}} simple {{/unless}}">
  <h1 class="effect-info-header">
    <span class="name">{{effect.name}}</span>
    <div class="effect-tags">
      <div class="effect-tag temporary">
        {{#if durationLabel}}
        <i class="fa-solid fa-hourglass"></i>
        <span>{{durationLabel}}</span>
        {{else}}
        <i class="fa-solid fa-feather"></i>
        <span>{{localize "VISUAL_ACTIVE_EFFECTS.LABELS.PASSIVE"}}</span>
        {{/if}}
      </div>

      {{#if effect.disabled}}
      <div class="effect-tag disabled">
        <i class="fa-solid fa-ban"></i>
        <span>{{localize "VISUAL_ACTIVE_EFFECTS.LABELS.DISABLED"}}</span>
      </div>
      {{/if}}

      {{#if effect.sourceName}}
      <div class="effect-tag source">
        <i class="fa-solid fa-tree"></i>
        <span>{{localize "VISUAL_ACTIVE_EFFECTS.LABELS.SOURCE"}}: {{effect.sourceName}}</span>
      </div>
      {{/if}}
    </div>
  </h1>

  {{#if strings.intro}}
  <div class="effect-info-details">
    <div class="effect-intro">{{{strings.intro}}}</div>
  </div>
  {{/if}}

  {{#if buttons.length}}
  <div class="vae-buttons">
    {{#each buttons}}
    <button type="button" class="vae-button" data-action="customButton" data-id="{{id}}">{{label}}</button>
    {{/each}}
  </div>
  {{/if}}
</div>
